{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "refactor",
                "perf",
                "docs",
                "test",
                "style",
                "chore",
                "ci",
                "build",
                "security"
            ]
        ],
        "scope-enum": [
            2,
            "always",
            [
                "root",
                "frontend",
                "backend",
                "api",
                "auth",
                "db",
                "deps"
            ]
        ],
        "subject-case": [
            2,
            "always",
            "sentence-case"
        ]
    }
}
