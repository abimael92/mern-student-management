#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run ESLint with max-warnings=999
npx eslint --max-warnings=999

if [ $? -eq 0 ]; then
  echo "No critical issues found."
else
  echo "Some warnings were found in your code. Please review them and fix the following:"
  # Customize this part to print the warning logs
  npx eslint --max-warnings=999 --format=unix
fi
